<project>

    <target name="init">
            <mkdir dir="build/classes" />
        </target>

    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="compile">
        <mkdir dir="classes"/>
        <javac includeantruntime="false" srcdir="src" destdir="classes" classpath="lib/javassist.jar"/>
    </target>

    <target name="jar">
        <mkdir dir="build/jar"/>
        <jar destfile="build/jar/debugger.jar" basedir="build/classes">
            <manifest>
                <attribute name="Main-Class" value="debugger"/>
            </manifest>
        </jar>
    </target>

    <target name="run">
        <java jar="build/jar/debugger.jar" fork="true"/>
    </target>

</project>

